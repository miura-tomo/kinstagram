
<%= form_for(@post, url: posts_path) do |f| %>
	<% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= @post.errors.count %>件のエラーが発生しました。</h2>
      <ul>
      <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    <% end %>

    
  <div class="row">
    <div class="col-sm-12">

    	<h4>画像投稿</h4>
      <%= f.attachment_field :image %>
      
      </div>
  </div>
  <br>
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group has-icon">
        <label class="control-label sr-only"></label>

        <h4>タイトル</h4>
        <%= f.text_field :food_name, class:"form-control", placeholder:"筋肉飯の名前" %>

        <span class="fa fa-building form-control-icon" aria-hidden="true"></span>
      </div>
    </div>
    <div class="col-sm-6">
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
    	
    	<h4>本文</h4>
      <%= f.text_area :caption, class:"form-control", rows:"3", placeholder:"料理の栄養素を教えてください" %>
    
    </div>
  </div>
  <hr>
  <%= f.submit "送信", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
  <% end %>